{% extends 'mmitvBackBundle::layoutdashboard.html.twig' %}

{% block title %} {{ parent() }}- Gestion Utilisateurs{% endblock %}

{% block body %}
<div id="content" class="span10">

    {% block breadcrumb %}
            {{ parent() }}
            <li><a href="#">Gestion utilisateurs</a></li>
            </ul>
    {% endblock %}

    <div class="row-fluid">
        <div class="box span12">
            <div class="box-header">
                <h2><i class="icon-list-alt"></i>Promouvoir</h2>
            </div>
            <br/>
            <h3>Êtes-vous sûr(e) de promouvoir {{ user.username }} au rôle de rédacteur ?</h3>
            <form action="{{ path('mmitv_gestion_utilisateur_promouvoir', {'id': user.id}) }}" method="post">
                <a href="{{ path('mmitv_gestion_utilisateur') }}" class="btn btn-default">
                    Retour
                </a>
                <input type="submit" value="Promouvoir" class="btn btn-warning" />
                {{ form_rest(form) }}
            </form>
        </div>
    </div>
</div>
{% endblock %}