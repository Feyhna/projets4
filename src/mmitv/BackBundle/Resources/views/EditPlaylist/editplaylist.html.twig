{% extends 'mmitvBackBundle::layoutdashboard.html.twig' %}

{% block title %} {{ parent() }}- Modifier une playlist{% endblock %}

{% block body %}
    <div id="content" class="span10">

        {% block breadcrumb %}
            {{ parent() }}
            <li><a href="#">Gérer les playlists</a></li>
            </ul>
        {% endblock %}

        <div class="row-fluid">
            <div class="box col-md-12">
                <div class="box-header" data-original-title>
                    <h2><i class="halflings-icon plus"></i><span class="break"></span>Ajouter une playlist</h2>
                </div>
                <div class="box-content">
                    {{ form_start(form) }}
                    <div class="form-group">
                    {{ form_label(form.playlistNom, 'Nom de la playlist', {'label_attr': {'class': 'control-label'}}) }}

                    {{ form_widget(form.playlistNom, {'attr': {'class': 'span6'}}) }}
                    </div>
                    {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary'}}) }}
                    {{ form_end(form) }}
                </div>
            </div>


            <div class="row-fluid sortable">
                <div class="col-md-12">



                {% for playlist in playlists %}
                    <div class="box col-md-12">

                        <div class="box-header">
                            <h2><i class="halflings-icon align-justify"></i><span
                                        class="break"></span>{{ playlist.playlistNom }}</h2>

                            <div class="box-icon">
                                <a href="{{ path('mmitv_updateplaylist', {id: playlist.id}) }}"><i class="halflings-icon wrench"></i></a>
                                <a href="#" class="btn-minimize"><i class="halflings-icon chevron-up"></i></a>
                                <a href="{{ path('mmitv_deleteplaylist', {id: playlist.id}) }}"><i
                                            class="halflings-icon remove"></i></a>
                            </div>
                        </div>

                        <div class="box-content">
                            <table class="table">
                                <thead>
                                <tr>
                                    <th>Nom</th>
                                    <th>Date d'ajout</th>
                                    <th>Catégorie</th>
                                    <th>Plateforme</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for video in playlist.video %}
                                    <tr>
                                        <td>{{ video.videoNom }}</td>
                                        <td>{{ video.videoAjout|date('d/m/Y') }}</td>
                                        <td>{{ video.videoType }}</td>
                                        <td>{{ video.videoPlateforme }}</td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                            <div class="pagination pagination-centered">
                                <ul>
                                    <li><a href="#">Préc.</a></li>
                                    <li class="active">
                                        <a href="#">1</a>
                                    </li>
                                    <li><a href="#">2</a></li>
                                    <li><a href="#">3</a></li>
                                    <li><a href="#">4</a></li>
                                    <li><a href="#">Suiv.</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                {% endfor %}

            </div>

            <!--/row-->
        </div>
        <!--/.fluid-container-->

        <!-- end: Content -->
    </div><!--/#content.span10-->
{% endblock %}