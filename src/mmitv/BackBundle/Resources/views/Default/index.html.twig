{% extends "mmitvBackBundle::layout.html.twig" %}

{% block title %} {{ parent() }} {% endblock %}

{% block body %}
    <div class="container-fluid-full">
        <div class="row-fluid">
            <div class="row-fluid">
                <div style="text-align: center;">
                <h1>BIENVENUE SUR MMI TV !</h1>
                    <hr>
                    <button type="button" class="btn btn-warning">
                        <a href="{{ path('mmitv_ifaceTV') }}" target="_blank">Accédez à l'interface TV</a>
                    </button>
                </div>
                <div class="login-box">
                    <h2>Accèder au tableau de bord</h2>
                    {% if error %}
                        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}
                    <form class="form-horizontal" action="{{ path("fos_user_security_check") }}" method="post">
                        <fieldset>

                            <div class="input-prepend" title="Username">
                                <span class="add-on"><i class="halflings-icon user"></i></span>
                                <input class="input-large span10" name="_username" id="username" type="text" placeholder="Pseudo"/>
                            </div>
                            <div class="clearfix"></div>

                            <div class="input-prepend" title="Password">
                                <span class="add-on"><i class="halflings-icon lock"></i></span>
                                <input class="input-large span10" name="_password" id="password" type="password" placeholder="Mot de passe"/>
                                <input type="hidden" name="_csrf_token" value="{{ fos_csrf_provider.generateCsrfToken('authenticate') }}" /><br/>
                            </div>
                            <div class="clearfix"></div>

                            <label for="remember_me" class="remember">
                                <div class="checker" id="uniform-remember">
                                    <span><input type="checkbox" id="remember_me" name="_remember_me" value="on"></span>
                                </div>
                                {{ 'security.login.remember_me'|trans({}, 'FOSUserBundle') }}
                            </label>

                            <div class="button-login">
                                <button type="submit" class="btn btn-primary">Se connecter</button>
                            </div>
                            <div class="clearfix"></div>
                    </form>
                    <hr>
                    <h3><a href="{{ path('fos_user_registration_register') }}">S'inscrire</a></h3>
                    <h3><a href="{{ path('fos_user_resetting_request') }}">Mot de passe oublié</a></h3>
                </div><!--/span-->
            </div><!--/row-->


        </div><!--/.fluid-container-->

    </div><!--/fluid-row-->
{% endblock %}