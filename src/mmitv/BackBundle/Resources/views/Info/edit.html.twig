{% extends 'mmitvBackBundle::layoutdashboard.html.twig' %}

{% block title %} {{ parent() }}- Gestion des infos{% endblock %}

{% block body %}
    <div id="content" class="span10">


        {% block breadcrumb %}
            {{ parent() }}
            <li><a href="#">Gestion infos</a></li>
            </ul>
        {% endblock %}

        <div class="row-fluid sortable">
            <div class="box span12">

                <div class="box-header" data-original-title>
                    <h2><i class="halflings-icon user"></i><span class="break"></span>Modifier une info</h2>
                    <div class="box-icon">
                        <a href="#" class="btn-minimize"><i class="halflings-icon chevron-up"></i></a>
                    </div>
                </div>
                <div class="box-content" style="margin-bottom:40px;">
                    {#

                    AFFICHAGE DU FORMULAIRE DEPUIS addform.html.twig

                    #}
                    {{ form_start(form, {'attr' : { 'class':'form-horizontal' }}) }}

                    <fieldset>

                        <div class="control-group">
                            {{ form_label(form.infosType, 'Titre ', {'label_attr' : {'class': 'control-label'}} ) }}
                            <div class="controls">
                                {{ form_widget(form.infosType, {'attr': {'class': 'span6'}}) }}
                            </div>
                        </div>
                        <div class="control-group">
                            {{ form_label(form.infosContenu, 'Contenu ', {'label_attr' : {'class': 'control-label'}} ) }}
                            <div class="controls">
                                {{ form_widget(form.infosContenu, {'attr': {'class': 'span6'}}) }}
                            </div>
                            <div class="form-actions">
                                {{ form_widget(form.Valider, {'attr': {'class':'btn btn-primary'}}) }}
                                <button type="reset" class="btn">Annuler</button>
                            </div>

                    </fieldset>
                    {{ form_rest(form) }}
                    {{ form_end(form) }}
                </div>

                <!--/span-->

            </div><!--/row-->

        </div><!--/.fluid-container-->

        <!-- end: Content -->
    </div><!--/#content.span10-->
{% endblock %}