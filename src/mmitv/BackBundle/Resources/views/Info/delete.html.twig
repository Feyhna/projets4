{% extends 'mmitvBackBundle::layoutdashboard.html.twig' %}

{% block title %} {{ parent() }}- Gestion des infos{% endblock %}

{% block body %}
    <div id="content" class="span10">

        {% block breadcrumb %}
            {{ parent() }}
            <li><a href="#">Gestion infos</a></li>
            </ul>
    {% endblock %}

        <div class="row-fluid">
            <div class="box span12">
                <div class="box-header">
                    <h2><i class="icon-list-alt"></i>Supprimer</h2>
                </div>
                <br/>
                <div class="box-content">
                    <h3>Êtes-vous sûr(e) de supprimer l'info {{ info.id }} ?</h3>
                    <form action="{{ path('mmitv_info_delete', {'id': info.id}) }}" method="post">
                        <a href="{{ path('mmitv_info') }}" class="btn btn-default">
                            Retour
                        </a>
                        <input type="submit" value="Supprimer" class="btn btn-warning" />
                        {{ form_rest(form) }}
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}