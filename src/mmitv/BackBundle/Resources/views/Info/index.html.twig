{% extends 'mmitvBackBundle::layoutdashboard.html.twig' %}

{% block title %} {{ parent() }}- Gestion Informations{% endblock %}

{% block body %}
    <div id="content" class="span10">

        {% block breadcrumb %}
            {{ parent() }}
            <li><a href="#">Gestion informations</a></li>
            </ul>
    {% endblock %}

        <div class="row-fluid">
            <div class="box span12">
                <div class="box-header">
                    <h2><i class="icon-list-alt"></i>Informations Ã  afficher</h2>
                </div>
                <div class="box-content">
                    <a href="{{ path('mmitv_info_add') }}" class="btn btn-success">Ajouter une info</a><br/><br/>
                    <table class="table table-striped table-bordered">
                        <thead>
                        <tr>
                            <th>ID</th>
                            <th>Type</th>
                            <th>Contenu</th>
                            <th>Gestion</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for info in infos %}
                                <tr>
                                    <td>{{ info.id }}</td>
                                    <td>{{ info.infosType }}</td>
                                    <td class="center">{{ info.infosContenu }}</td>
                                    <td class="center">
                                        <a class="btn btn-info" href="{{ path('mmitv_info_edit', { 'id' : info.id}) }}"><i class="halflings-icon white edit"></i></a>
                                        <a class="btn btn-danger" href="{{ path('mmitv_info_delete', { 'id' : info.id}) }}"><i class="halflings-icon white trash"></i></a></td>
                                </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

    </div>
{% endblock %}