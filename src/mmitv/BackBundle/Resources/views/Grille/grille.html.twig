{% extends 'mmitvBackBundle::layoutdashboard.html.twig' %}

{% block title %} {{ parent() }}- Grille{% endblock %}

{% block body %}
    <div id="content" class="span10">


    {% block breadcrumb %}
            {{ parent() }}
            <li><a href="#">Grille</a></li>
            </ul>
    {% endblock %}

        <div class="row-fluid sortable">
            <div class="box span12">
                <div class="box-header" data-original-title>
                    <h2><i class="halflings-icon calendar"></i><span class="break"></span>Grille des programmes</h2>
                </div>
                <div class="box-content">
                    <div id="external-events" class="span3 hidden-phone hidden-tablet">
                        <h4>Ajouter des notifications à la grille (drag & drop)</h4>
                        <div class="external-event badge">Programme 1</div>
                        <div class="external-event badge badge-success">Programme 2</div>
                        <div class="external-event badge badge-warning">Programme 3</div>
                        <div class="external-event badge badge-important">Programme 4</div>
                        <div class="external-event badge badge-info">Programme 5</div>
                        <div class="external-event badge badge-inverse">Programme 6</div>
                        <p>
                            <label for="drop-remove"><input type="checkbox" id="drop-remove" /> supprimer après drop</label>
                        </p>
                    </div>

                    <div id="calendar" class="span9"></div>

                    <div class="clearfix"></div>
                </div>
            </div>
        </div><!--/row-->
       </div>
{% endblock %}