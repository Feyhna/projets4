{% trans_default_domain 'FOSUserBundle' %}

<div class="container-fluid-full">
    <div class="row-fluid">
        <div class="row-fluid">
            <div class="login-box">
                <h2>Créer un compte</h2>

                <form class="form-horizontal" action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST">

                        <div class="input-prepend" title="Email">
                            <span class="add-on"><i class="halflings-icon inbox"></i></span>
                            {{ form_widget(form.email, { 'attr': {'class': 'input-large span10', 'placeholder': 'Adresse e-mail'|trans } }) }}
                            {{ form_errors(form.email) }}
                        </div>
                        <div class="clearfix"></div>

                        <div class="input-prepend" title="Username">
                            <span class="add-on"><i class="halflings-icon user"></i></span>
                            {{ form_widget(form.username, { 'attr': {'class': 'input-large span10', 'placeholder': 'Pseudo'|trans } }) }}
                            {{ form_errors(form.username) }}
                        </div>
                        <div class="clearfix"></div>

                        <div class="input-prepend" title="Password">
                            <span class="add-on"><i class="halflings-icon lock"></i></span>
                            {{ form_widget(form.plainPassword.first, { 'attr': {'class': 'input-large span10', 'placeholder': 'Mot de passe'|trans } }) }}
                            {{ form_errors(form.plainPassword.first) }}
                        </div>
                        <div class="clearfix"></div>

                        <div class="input-prepend" title="Password">
                            <span class="add-on"><i class="halflings-icon lock"></i></span>
                            {{ form_widget(form.plainPassword.second, { 'attr': {'class': 'input-large span10', 'placeholder': 'Confirmer votre mot de passe'|trans } }) }}
                            {{ form_errors(form.plainPassword.second) }}

                            {{ form_rest(form) }}
                        </div>
                        <div class="clearfix"></div>

                        <div class="button-login">
                            <button type="submit" class="btn btn-primary" value="{{ 'registration.submit'|trans }}">S'inscrire</button>
                        </div>
                        <div class="clearfix"></div>
                </form>
                <hr>
                <h3><a href="{{ path('fos_user_security_login') }}">Se connecter</a></h3>
                <h3><a href="{{ path('fos_user_resetting_request') }}">Mot de passe oublié</a></h3>
            </div><!--/span-->
        </div><!--/row-->


    </div><!--/.fluid-container-->

</div><!--/fluid-row-->
