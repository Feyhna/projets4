{% trans_default_domain 'FOSUserBundle' %}

<div class="container-fluid-full">
    <div class="row-fluid">
        <div class="row-fluid">
            <div class="login-box">
                <h2>Changer votre mot de passe</h2>
                <form class="form-horizontal" action="{{ path('fos_user_resetting_reset', {'token': token}) }}" {{ form_enctype(form) }} method="POST" class="fos_user_resetting_reset">
                    {{ form_widget(form) }}
                    <div class="clearfix"></div>
                    <div class="button-login">
                        <input class="btn btn-primary" type="submit" value="{{ 'resetting.reset.submit'|trans }}" />
                    </div>
                </form>
                <div class="clearfix"></div>
            </div><!--/span-->
        </div><!--/row-->


    </div><!--/.fluid-container-->

</div><!--/fluid-row-->
