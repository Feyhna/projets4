{% trans_default_domain 'FOSUserBundle' %}

<div class="container-fluid-full">
    <div class="row-fluid">
        <div class="row-fluid">
            <div class="login-box">
                <h2>Mot de passe perdu ?</h2>
                    <form class="form-horizontal" action="{{ path('fos_user_resetting_send_email') }}" method="POST">
                        <div class="input-prepend" title="Email">
                            <span class="add-on"><i class="halflings-icon inbox"></i></span>
                            {% if invalid_username is defined %}
                                <p>{{ 'resetting.request.invalid_username'|trans({'%username%': invalid_username}) }}</p>
                            {% endif %}
                            <input type="text" id="username" name="username" required="required" class="input-large span10" placeholder="{{ 'resetting.request.username'|trans }}"/>
                        </div>
                        <div class="clearfix"></div>
                        <div class="button-login">
                            <input type="submit" class="btn btn-primary" value="{{ 'resetting.request.submit'|trans }}" />
                        </div>
                    </form>
                <div class="clearfix"></div>
                <hr>
                <h3><a href="{{ path('fos_user_security_login') }}">Se connecter</a></h3>
                <h3><a href="{{ path('fos_user_registration_register') }}">S'inscrire</a></h3>
            </div><!--/span-->
        </div><!--/row-->


    </div><!--/.fluid-container-->

</div><!--/fluid-row-->
